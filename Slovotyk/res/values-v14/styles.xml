<resources>

    <style name="MyAppActionBarTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyApp.ActionBar</item>
	    <item name="android:homeAsUpIndicator">@drawable/up</item>
<!-- 
        <item name="android:homeAsUpIndicator">@drawable/dic</item>
-->        
    </style>

    <!-- Bonus: if you want to style whole Action Bar, not just the menu -->
    <style name="MyApp.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <!-- Blue background color & black bottom border -->
        <item name="android:background">@color/sky_blue</item>
    	<item name="android:titleTextStyle">@style/MyApp.ActionBar.TitleTextStyle</item>
        </style>   

 
  	<style name="MyApp.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">@color/white</item>
  	</style>    
    
	
</resources>  

